<div class="feature">
    <div class="container">
        <div class="row">
            <div class="feature__all justify-content-between">
                {{#each item}}
                    <div class="feature__box col-lg-{{size}}">
                        <div class="feature__oval">
                            <img src="{{oval}}" alt="oval">
                        </div>
                        <h4>{{title}}</h4>
                        <p>{{text}}</p>
                    </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
