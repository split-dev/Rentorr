<html lang="en">
<head>
    {{> ../common/head }}
</head>
<body class="main-tenant">
{{> ../common/nav }}

{{#each top-page-search}}
    {{> ../common/top-page-search}}
{{/each}}
<div class="trend-city">
    <div class="container">
        <div class="row trend-city__all-position">
            <div class="trend-city__title">
                <h2>Trending cities in South Africa</h2>
            </div>
            <div class="trend-city__all">
                {{#each country}}
                    <a href="#" class="trend-city__item" style="background-image: url('{{img}}')">
                        <strong>{{title}}</strong>
                        <p>{{desc}}</p>
                    </a>
                {{/each}}
            </div>
            <a href="#" class="nav__button--blue trend-city__link">Find your Next home</a>
        </div>
    </div>
</div>
{{#each apply}}
    {{> ../common/apply}}
{{/each}}
{{#each image-info}}
    {{> ../partials/image-info }}
{{/each}}
{{#each paragraf}}
    {{> ../partials/paragraf }}
{{/each}}
{{#each ready}}
    {{> ../common/ready}}
{{/each}}
{{> ../common/footer}}
</body>
</html>
